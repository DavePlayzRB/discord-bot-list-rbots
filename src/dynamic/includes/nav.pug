#navTop
    span.nav.link
        img(src='/assets/img/logo.png')
    span.navtag.keep
        a(href="/")
            span.navtext.keep Discord Bot List
        include arrow.pug
        if (bot && !site_key) 
            a(href=`/bots/${bot.botid}`)
                span.navtext #{bot.username}
            include arrow.pug
            a(href=`/api/embed/${bot.botid}` target="_blank")
                span.navtext Embed
        if ((req.baseUrl == "/user" || req.baseUrl == "/me") && userProfile)
            a(href=`/user/${userProfile.id}`)
                span.navtext #{userProfile.username}
        if (req.baseUrl == "/tag")
            a(href=`/tag/${tag}`)
                span.navtext.capitalise #{tag}
    a#searcher.navtag.search(href='/bots/search/')
        #search.navtext
            i.fas.fa-search
            |  Search
    span.dropdown
        if (req.user)
            a#login.navtag.keep(href='/login') #{req.user.username}##{req.user.discriminator} 
            i.fas.fa-id-badge
            span.dd-content
                a(href='/join' target='_blank') Join Server 
                 i.fab.fa-discord
                br
                a(href='/add') Add bot 
                i.fas.fa-plus
                br
                a(href='/about') About 
                i.fas.fa-address-book
                if (req.user.staff)
                    br
                    a(href='/admin') Dashboard 
                    i.fas.fa-tools
                br
                a(href='/logout') Logout 
                  i.fas.fa-sign-out-alt
        else
            a#login.navtag.keep(href='/login') Login
              fas fa-sign-in-alt