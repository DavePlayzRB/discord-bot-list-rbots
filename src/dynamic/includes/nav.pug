#navTop
    span.nav.link
        img(src='https://media.discordapp.net/attachments/803026846454513754/804926847300927489/icons8-discord-100.png?width=90&height=90')
    span.navtag.keep
        a(href="/")
            span.navtext.keep DisCloud        
        include arrow.pug
        if (bot && !site_key) 
           
            include arrow.pug
            a(href=`/api/embed/${bot.botid}` target="_blank")
              
        if ((req.baseUrl == "/user" || req.baseUrl == "/me") && userProfile)
            a(href=`/user/${userProfile.id}`)
                pan.navtext #{userProfile.username}
        if (req.baseUrl == "/tag")
            a(href=`/tag/${tag}`)
                 span.navtext.capitalise #{tag}
    a#searcher.navtag.search(href='/bots/search/')
        #search.navtext
            i.fas.fa-search
            
            |  Search
    span.dropdown
        if (req.user)
            a#login.navtag.keep(href='/login') #{req.user.username}##{req.user.discriminator}
            span.dd-content
                a(href='/join' target='_blank') Join Server
                br
                a(href='/add') Add bot
                br
                a(href='/about') About
                if (req.user.staff)
                    br
                    a(href='/admin') Dashboard
                br
                a(href='/logout') Logout
        else
              a#login.navtag.keep(href='/login') Login With Discord 
                i.fas.fa-sign-in-alt
        span.navtag.keep
        a(href="/")
            span.navtext.keep DisCloud 