#navTop
    span.nav.link
        img(src='https://media.discordapp.net/attachments/764244251923972096/809596239310094346/PngItem_2986122.png?width=453&height=453')
    span.navtag.keep
        a(href="/")
            span.navtext.keep Network Bot List
        include arrow.pug
        if (bot && !site_key) 
            a(href=`/bots/${bot.botid}`)
            include arrow.pug
            a(href=`/api/embed/${bot.botid}` target="_blank")
        if ((req.baseUrl == "/user" || req.baseUrl == "/me") && userProfile)
            a(href=`/user/${userProfile.id}`)
                span.navtext #{userProfile.username}
        if (req.baseUrl == "/tag")
            a(href=`/tag/${tag}`)
                span.navtext.capitalise #{tag}
    a#searcher.navtag.search(href='/bots/search/')
        #search.navtext
            i.fas.fa-search
            |  Search
    span.dropdown
        if (req.user)
            a#login.navtag.keep(href='/login') #{req.user.username}  
            span.dd-content
                a(href='/join' target='_blank') Join Server 
                 i.fab.fa-discord
                br
                a(href='/add') Add bot 
                i.fas.fa-plus
                br
                a(href='/') Top Bot 
                i.fas.fa-award
                br
                a(href='/certification') Certified  
                i.fas.fa-robot
                br
                a(href='/legal') Legal 
                i.fas.fa-file-contract
                if (req.user.staff)
                    br
                    a(href='/admin') Dashboard 
                    i.fas.fa-tools
                br
                a(href='https://certified.networkbotlist.tk') Certified Bots 
                i.fas.fa-robot
                br
                a(href='/logout') Logout 
                i.fas.fa-sign-out-alt
        else
            a#login.navtag.keep(href='/login') Login 
                i.fas.fa-sign-in-alt 


