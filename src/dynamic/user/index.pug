doctype html
include ../includes/head.pug
body
  include ../includes/nav.pug
  #content
    span.header
        img.icon(src=userProfile.displayAvatarURL() width="100px")
        h1 #{userProfile.username}
        .badge-holder
            if (admin)
                span.badge
                    img(src='https://media.discordapp.net/attachments/764398216942714890/805915332153442344/unknown.png?width=457&height=457' title='Admin')
                    |  Admin 
                    
                span.badge
                    img(src='https://upload.wikimedia.org/wikipedia/commons/9/92/4228_discord_bot_dev.png' title='Bot Supporter Dev')
                    | Supporter Dev
    #cards
        each val, i in cards
            div.card
                if (val.nsfw)
                    img.icon.nsfw(src=val.logo)
                else
                    img.icon(src=val.logo)
                h2.title #{val.username}
                    a.likes(href=`/bots/like/${val.botid}`)
                        i.far.fa-heart
                        | #{val.likes || 0}
                p.desc #{val.description}
                a.small.button(href=`/bots/${val.botid}`) View Bot
